{
	"name": "Code - OSS with X11/Wayland",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"overrideCommand": false,
	"privileged": true,
	"mounts": [
		{
			"source": "vscode-dev",
			"target": "/vscode-dev",
			"type": "volume"
		}
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"mutantdino.resourcemonitor"
			]
		}
	}
}
